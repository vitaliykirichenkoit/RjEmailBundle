{
    "name": "rj/email-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 EmailBundle.",
    "keywords": ["email"],
    "homepage": "http://github.com/jeremymarc/RjEmailBundle/",
    "license": "MIT",
    "authors": [
        {
            "name":"Jeremy Marc",
            "email":"jeremy.marc@me.com"
        },
        {
            "name":"Arnaud Le Blanc",
            "email":"arnaud.lb@gmail.com"
        }
    ],

    "require": {
        "php": "^8.0",
        "symfony/framework-bundle": "^6.0",
        "swiftmailer/swiftmailer": "*",
        "stof/doctrine-extensions-bundle": "*",
        "a2lix/translation-form-bundle" : "*",
        "twig/twig": "^2.0"
    },

    "require-dev": {
        "doctrine/orm": "2.*",
        "phpunit/phpunit": "^10.0"
    },

    "autoload": {
        "psr-4": { "Rj\\EmailBundle\\": "" }
    },

    "autoload-dev": {
        "psr-4": { "Rj\\EmailBundle\\Tests\\": "Tests/" }
    },

    "minimum-stability": "stable"
}
